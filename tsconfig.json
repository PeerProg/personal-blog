{
  "compilerOptions": {
    "module": "esnext",
    "jsx": "preserve",
    "moduleResolution": "node",
    "target": "es6",
    "lib": [
      "es2015",
      "dom",
      "dom.iterable"
    ],
    "sourceMap": true,
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src",
    "pages/index.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
